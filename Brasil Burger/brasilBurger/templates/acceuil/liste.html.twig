        <div class="card ">
          <div class="card-body p-6">
             <div class="row">
             
               <div class="col-lg-12">
               
                <h5 class="mb-3">
                <a class="text-body"><i
                      class="fas fa-long-arrow-alt-left me-2"></i>Liste de vos Commandes</a></h5>
                <hr >
                 <div class="d-flex justify-content-between align-items-center mb-4" >
                 
                  <div>
                    <p class="mb-1"> Liste des commandes...</p>
                      <div class="card-body pt-0 pb-5 mx-auto "  style="width:150%">
                      <table class="table"  >
                        <thead>
                          <tr>
                            <th> Date</th>
                            <th> Heure Debut/Fin</th>
                   
                            <th> Produit-name</th>
                            <th> Etat Commande</th>
                            <th> Options</th>
                          </tr>
                        </thead>
                        <tbody>
                        {% for commande in commandes %}
                          <tr>
                            <td >
                              <span class="text-dark"> {{ commande.date|date('d-m-Y') }} </span>
                            </td>

                            <td >
                              <span class="text-dark"> {{ commande.date|date('H:i') }} </span>
                            </td>

                            

                            <td >
                              <span class="text-dark"> 
                              {% for produit in commande.produits %}
                                        {{produit.libelle}}
                                    {% endfor %}
                              </span>
                            </td>
                            <td >
                              <span
                                        {% if commande.etat == 'En cours' %}
                                            class="bg-warning text-white"
                                        {% elseif commande.etat == 'TerminÃ©' %}
                                            class=" bg-success"
                                        {% else %}
                                            class=" bg-danger"
                                        {% endif %}
                                        >
                                        {{commande.etat}}
                                    </span>
                            </td>
                            <td >
                                
                                 {% if commande.etat == 'En cours' %}
                                  <a type="submit" href="{{path('remov_command_user', {id:commande.id})}}" class="btn btn-danger btn-sm mx-2">
                                  Annuler
                                  </a>
                                  
                                    {% else %}
                                    <a  class="btn btn-danger btn-sm mx-2 disabled" disabled="disabled">
                                        Annuler
                                        </a>
                                    {% endif %}
                                  </td>
                          
                          {% endfor %}

                        </tbody>
                      </table>
                  </div>

                </div>


