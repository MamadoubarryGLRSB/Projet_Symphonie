{% block inner_container %}
<div class="row">
<!-- Sales Card -->
    <div class="col-xxl-3 col-md-4">
      <div class="card info-card sales-card">
        <div class="card-body">
          <h5 class="card-title">Commande en cours <span>| Aujourd'hui</span></h5>
          <div class="d-flex align-items-center">
            <div class="d-flex align-items-center justify-content-center">
              <i class="bi bi-cart" 
              style="padding:15px 23px; background:#F6F6FE;color:#4154f1; border-radius:30%; font-size:20px"
              ></i>
            </div>
            <div class="ps-3">

              <h6 style="font-size:30px; font-weight:700">   &nbsp;&nbsp;&nbsp;&nbsp; {{commandeEnCours}} commandes</h6>

            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Revenue Card -->
    <div class="col-xxl-3 col-md-4">
      <div class="card info-card revenue-card">
        <div class="card-body">
          <h5 class="card-title">Commande Terminée <span>| Aujourd'hui</span></h5>
          <div class="d-flex align-items-center">
            <div class="d-flex align-items-center justify-content-center">
              <i class="bi bi-calendar2-check"
              style="padding:15px 23px; background:#E0F8E9;color:#67CD6A; border-radius:30%; font-size:20px"
              ></i>
            </div>
            <div class="ps-3">
              <h6 style="font-size:30px; font-weight:700">&nbsp;&nbsp;&nbsp;&nbsp;{{commandeValide}} commandes</h6>
            </div>
          </div>
        </div>
      </div>
    </div><!-- End Revenue Card -->
    <!-- Customers Card -->
    <div class="col-xxl-3 col-md-4">
      <div class="card info-card customers-card">
        <div class="card-body">
          <h5 class="card-title">Commandes annulées <span>| Aujourd'hui</span></h5>
          <div class="d-flex align-items-center">
            <div class="d-flex align-items-center justify-content-center">
              <i class="bi bi-x-octagon-fill"
              style="padding:15px 23px; background:#fab1a0;color:#F97F51; border-radius:30%; font-size:20px"
              ></i>
            </div>
            <div class="ps-3">
              <h6 style="font-size:30px; font-weight:700">&nbsp;&nbsp;&nbsp;&nbsp;{{commandeInValide}} commandes</h6>
            </div>
          </div>
        </div>
      </div>
    </div><!-- End Customers Card -->
     <!-- Revenue Card -->
    <div class="col-xxl-3 col-md-6 mt-2">
      <div class="card info-card revenue-card">
        <div class="card-body">
          <h5 class="card-title">Produit <span>| Le plus utilisé</span></h5>
          <div class="d-flex align-items-center">
            <div class="d-flex align-items-center justify-content-center">
              <img width="75px" src="{{asset("uploads/") ~ produitPlusCommander.image}}">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <h2> {{produitPlusCommander.libelle}} </h2>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>
            <div class="ps-3">
              <h6 style="font-size:30px; font-weight:500">{{produitPlusCommander.commandes |length}} commandes</h6>                    </div>
          </div>
        </div>
      </div>
    </div><!-- End Revenue Card -->
    <div class="col-xxl-3 col-md-6 mt-2">
