            <div class="row mt-5">
            <div class="col-12">  
                  <!-- Recent Order Table -->
                  <div class="card card-table-border-none" id="recent-orders">
                    <div class="card-header justify-content-between">
                      <h2>Liste des Commandes</h2>
                      <div class="date-range-report ">
                        <span></span>
                      </div>
                    </div>
                    <div class="card-body pt-0 pb-5">
                      <table class="table  card-table table-responsive table-responsive-large" style="width:100%">
                        <thead>
                          <tr>
                            <th>Commande Date</th>
                            <th>Nom Client</th>
                            <th>Produit Libelle</th>
                            <th >Produit Image</th>
                            <th>Produit Prix</th>
                            <th>Etat</th>                   
                            <th>Options</th>
                          </tr>
                        </thead>
                        <tbody>

                       {% for commande in commandes %}
                       
                          <tr>
                            <td >
                              <a class="text-dark" href=""> {{ commande.date|date('d-m-Y H:i ') }}</a>
                            </td>
                            <td >
                              <a class="text-dark" href=""> {{ commande.users.nom_complet }}</a>
                            </td>
                           
                            <td>
                               {% for produit in commande.produits %}
                                <a class="text-dark" href=""> {{produit.libelle}}</a> 
                               {% endfor %}
                              
                            </td>
                            
                            <td >

                              <figure>
                                {% for produit in commande.produits %}
                                <img src="{{ asset('uploads/') ~ produit.image }}" width="50" height="80">  
                               {% endfor %}
                                
                              </figure>
                            </td>

                            <td >
                              <a class="text-dark" href=""> {{ commande.prix }}</a>
                            </td>
                            
                            
                             <td>
                              <span
                                {% if commande.etat == 'Terminé' %}
                                  class="badge bg-success"
                                {% elseif commande.etat == 'En Cours' %}
                                  class="badge bg-warning"
                                  {% elseif commande.etat == 'Annulé' %}
                                  class="badge bg-danger"
                                {% endif %}
                                > {{commande.etat}}


                          

                       <td >
                            {% if commande.etat == 'En cours' %}
                              <a type="submit" href="{{path('valid_command', {id:commande.id})}}" class="btn btn-success btn-sm mx-2">
                                <span class="bi bi-check-circle-fill"></span>
                              </a>
                              <a type="submit" href="{{path('remov_command', {id:commande.id})}}" class="btn btn-danger btn-sm mx-2">
                              <span class="bi bi-x-circle-fill"></span>
                              </a>
                               {% elseif commande.etat == 'Terminé' %}
                                  <a type="submit" href="{{path('valid_command', {id:commande.id})}}" class="btn btn-success btn-sm mx-2 ">
                                    <span class="bi bi-check-circle-fill"></span>
                                  </a>
                                  <a type="submit" href="{{path('remov_command', {id:commande.id})}}" class="btn btn-danger btn-sm mx-2 ">
                                  <span class="bi bi-x-circle-fill"></span>
                              </a>
                               {% else %}
                               <a type="submit" href="{{path('valid_command', {id:commande.id})}}" class="btn btn-success btn-sm mx-2 ">
                                    <span class="bi bi-check-circle-fill"></span>
                                  </a>
                                  <a type="submit" href="{{path('remov_command', {id:commande.id})}}" class="btn btn-danger btn-sm mx-2 ">
                                  <span class="bi bi-x-circle-fill"></span>
                              </a>
                               {% endif %}
                              </td>

                            
                          </tr>
                          {% endfor %} 
                        
                        </tbody>
                      </table>
                      
