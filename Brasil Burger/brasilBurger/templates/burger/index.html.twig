{% extends 'base.html.twig' %}

{% block title %}Burger index{% endblock %}

{% block body %}
    <h1>Burger index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Image</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for burger in burgers %}
            <tr>
                <td>{{ burger.id }}</td>
                <td>{{ burger.libelle }}</td>
                <td>{{ burger.image }}</td>
                <td>{{ burger.type }}</td>
                <td>
                    <a href="{{ path('app_burger_show', {'id': burger.id}) }}">show</a>
                    <a href="{{ path('app_burger_edit', {'id': burger.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_burger_new') }}">Create new</a>
{% endblock %}
